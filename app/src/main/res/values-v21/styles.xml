<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
		Base application theme for API 14+. This theme completely replaces
		BaseTheme from BOTH res/values/styles.xml and
		res/values-v11/styles.xml on API 14+ devices.
	-->
	<style name="BaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
		<!-- API 14 theme customizations can go here. -->
		<item name="android:statusBarColor">@color/statusbar</item>
	</style>
    
	<style name="BaseSpinnerDropDown" parent="android:style/Widget.Material.ListView.DropDown">
	</style>
    
	<style name="BaseSpinnerItem" parent="android:TextAppearance.Material.Widget.TextView.SpinnerItem">
	</style>

	<style name="BaseSpinnerDropdownItem" parent="android:TextAppearance.Material.Widget.TextView.SpinnerItem">
	</style>
    
	<style name="BaseActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
	</style>

	<style name="BaseOverflowMenuTextStyle">
	</style>

	<style name="BaseSpinner" parent="android:style/Widget.Holo.Light.Spinner">
	</style>

	<style name="BaseButton" parent="android:Widget.Holo.Button">
	</style>

	<!--
	-->
	<style name="BaseDialog" parent="@android:style/Theme.Material.Dialog">
		<!-- button captions -->
		<item name="android:colorAccent">@color/dialogs.buttons.text</item>
	</style>

	<style name="BaseDialogTitleText" parent="@android:style/TextAppearance.Material.DialogWindowTitle">
	</style>

	<style name="BaseDialogMessageText" parent="@android:style/TextAppearance.Material.Medium">
	</style>

	<style name="BaseDialogButton" parent="@android:style/Widget.Material.Button.Borderless">
	</style>

	<style name="BaseDialogProgressBar" parent="@android:style/Widget.Material.ProgressBar.Horizontal">
	</style>
	<!--
	-->

</resources>
