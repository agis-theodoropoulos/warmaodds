<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
		Base application theme for API 14+. This theme completely replaces
		BaseTheme from BOTH res/values/styles.xml and
		res/values-v11/styles.xml on API 14+ devices.
	-->
	<style name="BaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<!-- API 14 theme customizations can go here. -->
	</style>
    
	<style name="BaseSpinnerDropDown" parent="android:style/Widget.Holo.ListView.DropDown">
	</style>
    
	<style name="BaseSpinnerItem" parent="android:TextAppearance.Holo.Widget.TextView.SpinnerItem">
	</style>

	<style name="BaseSpinnerDropdownItem" parent="android:TextAppearance.Holo.Widget.TextView.SpinnerItem">
	</style>
    
	<style name="BaseActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
	</style>

	<style name="BaseOverflowMenuTextStyle">
	</style>

	<style name="BaseSpinner" parent="android:style/Widget.Holo.Light.Spinner">
	</style>

	<style name="BaseButton" parent="android:Widget.Holo.Button">
	</style>

	<style name="BaseDialog" parent="@android:style/Theme.Holo.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="BaseDialogTitleText" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
	</style>

	<style name="BaseDialogMessageText" parent="@android:style/TextAppearance.Holo.Medium">
	</style>

	<style name="BaseDialogButton" parent="@android:style/Widget.Holo.Button.Borderless">
	</style>

	<style name="BaseDialogProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
	</style>

</resources>
