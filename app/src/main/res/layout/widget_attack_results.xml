<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/AttackResultsLayout"
	>
	<TableRow
		style="@style/AttackResultsRowLayout"
		>
		<TextView
			style="@style/AttackResultsTextView.Caption"
			android:text="@string/attack.results.hit"
			/>
		<TextView
			style="@style/AttackResultsTextView.Result"
			android:id="@+id/ATTACK_TV_HIT"
			/>
	</TableRow>
	<TableRow
		style="@style/AttackResultsRowLayout"
		>
		<TextView
			style="@style/AttackResultsTextView.Caption"
			android:text="@string/attack.results.critical"
			/>
		<TextView
			style="@style/AttackResultsTextView.Result"
			android:id="@+id/ATTACK_TV_CRITICAL"
			/>
	</TableRow>
	<TableRow
		style="@style/AttackResultsRowLayout"
		>
		<TextView
			style="@style/AttackResultsTextView.Caption"
			android:text="@string/attack.results.average_damage"
			/>
		<TextView
			style="@style/AttackResultsTextView.Result"
			android:id="@+id/ATTACK_TV_DAMAGE"
			/>
	</TableRow>
</TableLayout>
